{% block notice %}
    {% for notice_level, class in {'success' : 'success','error' : 'danger','info' : 'info', 'warning' : 'warning'} %}
        {% if app.request.hasPreviousSession %}
            {% if app.session.flashbag.has(notice_level) %}
                <div class="alert alert-dismissable alert-{{ class }}">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    {% for notice in app.session.flashbag.get(notice_level) %}
                        <span>{{ notice | trans | nl2br }}</span>
                    {% endfor %}
                </div>
            {% endif %}
        {% endif %}
    {% endfor %}
{% endblock %}